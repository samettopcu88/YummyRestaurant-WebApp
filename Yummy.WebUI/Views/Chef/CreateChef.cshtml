@model CreateChefDto

@{
    ViewData["Title"] = "CreateChef";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>New Chef Entry Page</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <label>Chef Full Name</label>
                            <input type="text" asp-for="NameSurname" class="form-control" />
                            <br />
                            <label>Chef Title</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label>Description</label>
                            <input type="text" asp-for="Description" class="form-control" />
                            <br />
                            <label>Chef Image URL</label>
                            <input type="text" asp-for="ImageUrl" class="form-control" />
                            <br />
                            <button class="btn btn-primary">Save Chef</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
