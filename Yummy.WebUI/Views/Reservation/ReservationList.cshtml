@model List<ResultReservationDto>

@{
    ViewData["Title"] = "ReservationList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Reservation List</h4>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Customer Name</th>
                                    <th scope="col">Reservation Date</th>
                                    <th scope="col">Reservation Time</th>
                                    <th scope="col">Number of People</th>
                                    <th scope="col">Reservation Status</th>
                                    <th scope="col">Delete</th>
                                    <th scope="col">Update</th>
                                    <th scope="col">Accept</th>
                                    <th scope="col">Cancel</th>
                                    <th scope="col">Hold</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th scope="row">@count</th>
                                        <td>@item.NameSurname</td>
                                        <td>@item.ReservationDate</td>
                                        <td>@item.ReservationTime</td>
                                        <td>@item.CountofPeople</td>
                                        <td>@item.ReservationStatus</td>
                                        <td><a href="/Reservation/DeleteReservation/@item.ReservationId/" class="btn btn-danger">Delete</a></td>
                                        <td><a href="/Reservation/UpdateReservation/@item.ReservationId/" class="btn btn-success">Update</a></td>
                                        <td><a href="/Reservation/AcceptReservation/@item.ReservationId/" class="btn btn-info">Accept</a></td>
                                        <td><a href="/Reservation/CancelReservation/@item.ReservationId/" class="btn btn-dark">Cancel</a></td>
                                        <td><a href="/Reservation/WaitReservation/@item.ReservationId/" class="btn btn-warning">Hold</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
